= simple_form_for @interchange, html: { multipart: true } do |f|
	- if @interchange.errors.any?
		#errors
			%p
				= @interchange.errors.count
				Prevented this interchange froms saving
			%ul
				- @interchange.errors.full_messages.each do |msg|
					%li= msg
	.panel-body
		= f.input :title, input_html: { class: 'form-control' }
		= f.input :model, input_html: { class: 'form-control' }
		= f.input :condition, input_html: { class: 'form-control' }
		= f.input :price, input_html: { class: 'form-control' }
		= f.input :location, input_html: { class: 'form-control' }
		= f.input :description, input_html: { class: 'form-control' }
		= f.input :change_in, input_html: { class: 'form-control' }
		= f.input :image, input_html: { class: 'form-control' }

	= f.button :submit, class: "btn btn-primary"
